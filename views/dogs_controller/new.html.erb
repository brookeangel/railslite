<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action="/dogs" method="POST">
  <label>Super Secret Auth Token
    <input type="text" name="form_authenticity_token" value="<%= auth_token %>">
  </label>

  <label>Name
    <input type="text" name="dog[name]" value="<%= @dog.name %>">
  </label>

  <label>Owner
    <input type="text" name="dog[owner_id]" value="<%= @dog.owner_id %>">
  </label>

  <input type="submit">
</form>
